<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:paddingTop="5dp"
        android:id="@+id/llAppLabel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/list_background"
        >
        <TextView
            android:id="@+id/tvAppLableNewgoods"
            android:text="新品"
            android:drawableTop="@drawable/menu_item_new_good_normal"
            style="@style/app_item_label"
            />
        <TextView
            android:id="@+id/tvAppLableBoutique"
            android:text="精选"
            android:drawableTop="@drawable/boutique_normal"
            style="@style/app_item_label"
            />
        <TextView
            android:id="@+id/tvAppLableCategory"
            android:text="分类"
            android:drawableTop="@drawable/menu_item_category_normal"
            style="@style/app_item_label"
            />
        <FrameLayout
            android:id="@+id/flAppLabelCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tvAppLableCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/menu_item_cart_normal"
                />
            <TextView
                android:id="@+id/tvAppLabelCartHint"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_hint"
                android:text="1"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_gravity="right"
                />
        </FrameLayout>
        <TextView
            android:id="@+id/tvAppLableContact"
            android:text="联系人"
            android:drawableTop="@drawable/menu_item_personal_center_normal"
            style="@style/app_item_label"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llAppLabel"
        >
    </android.support.v4.view.ViewPager>
</RelativeLayout>
